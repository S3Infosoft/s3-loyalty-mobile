<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView

            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/denikivadduai"
            android:fontFamily="@font/autour_one"
            android:text="Account Information"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


        <TableLayout
            android:id="@+id/tableregai"
            android:layout_below="@id/denikivadduai"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/fnametvai"
                    android:fontFamily="@font/abeezee"
                    android:text="Phone Number"
                    />
                <EditText
                    android:ems="20"
                    android:hint="Phone Number"
                    android:id="@+id/fnetai"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/lnametvai"
                    android:fontFamily="@font/abeezee"
                    android:text="Email Address"
                    />
                <EditText
                    android:id="@+id/lnetai"
                    android:gravity="center"
                    android:ems="20"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:hint="Email Address"
                    />


            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:id="@+id/emailtvai"
                    android:gravity="center"
                    android:fontFamily="@font/abeezee"
                    android:text="Address"
                    />
                <EditText
                    android:id="@+id/emailetai"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:hint="Address"
                    />

            </TableRow>
            <TableRow
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/dobetai"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Notifications ->"
                    />

            </TableRow>
            <TableRow
                android:paddingTop="10dp"
android:paddingBottom="10dp"
                >
                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/anntvai"
                    android:fontFamily="@font/abeezee"
                    android:text="Transaction History ->"
                    android:gravity="center"
                    />

            </TableRow>

            <TableRow
                android:padding="10dp"
                >
                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:id="@+id/citytvai"
                    android:fontFamily="@font/abeezee"
                    android:text="UserID"
                    android:gravity="center"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_weight="3"
                    android:id="@+id/autocompletetextcityai"
                    android:textStyle="bold"

                    />
                <!--
    <Spinner
    android:textAlignment="center"
        android:layout_weight="3"
        android:id="@+id/spinnercity"
        >
    </Spinner>-->
            </TableRow>

