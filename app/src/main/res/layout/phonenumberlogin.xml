<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/phonenumberlayourrelative"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/justtextmobilenumber"
android:layout_alignTop="@id/mobilenumbergoes"
            android:gravity="center"
            android:layout_alignBottom="@id/mobilenumbergoes"
            android:text="Enter Your Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/mobilenumbergoes"
            android:layout_toRightOf="@id/justtextmobilenumber"
            android:hint="Mobile Number Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="GET OTP"
    android:layout_marginTop="10dp"
    android:id="@+id/getotpbutton"
    android:layout_below="@id/justtextmobilenumber"
    />
        <TextView
            android:layout_alignLeft="@id/justtextmobilenumber"
            android:layout_alignRight="@id/justtextmobilenumber"
            android:layout_alignTop="@id/otpgoes"
            android:layout_alignBottom="@id/otpgoes"
            android:layout_below="@id/getotpbutton"
            android:id="@+id/justtextotp"
            android:gravity="center"
            android:text="Enter Your OTP Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_alignLeft="@id/mobilenumbergoes"
            android:layout_alignRight="@id/mobilenumbergoes"
            android:layout_marginTop="10dp"
            android:layout_below="@id/getotpbutton"
            android:layout_toRightOf="@id/justtextotp"
            android:id="@+id/otpgoes"
            android:gravity="center"
            android:hint="Enter OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/phonenumberlayourrelative"
    android:text="Sign In"
    android:id="@+id/phonenumbersigninraata"
    />
</RelativeLayout>